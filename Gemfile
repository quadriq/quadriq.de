source "https://rubygems.org"
ruby RUBY_VERSION

group :development, :test do
 gem "jekyll", "3.2.1"
 gem "minima"
 gem 'redcarpet'
 gem 'rouge'
 gem 'jekyll-seo-tag'
 gem 'jekyll-sitemap'
end

group :production do
 gem "minima"
 gem 'redcarpet'
 gem 'rouge'
 gem "github-pages", group: :jekyll_plugins
 gem 'jekyll-seo-tag'
 gem 'jekyll-sitemap'
end
